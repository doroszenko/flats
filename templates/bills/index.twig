{% extends "layout/app.twig" %}

{% block title %}Rozliczenia - {{ flat.name }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
        <!-- Page header -->
        <div class="mb-8">
            <nav class="flex mb-4" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-4">
                    <li>
                        <a href="/flats" class="text-gray-400 hover:text-gray-500">
                            <i class="fas fa-building mr-1"></i>
                            Mieszkania
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-gray-400 mx-2"></i>
                            <a href="/flats/{{ flat.id }}" class="text-gray-400 hover:text-gray-500">{{ flat.name }}</a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-gray-400 mx-2"></i>
                            <span class="text-gray-500">Rozliczenia</span>
                        </div>
                    </li>
                </ol>
            </nav>
            
            <div class="md:flex md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                        <i class="fas fa-file-invoice mr-2 text-primary-600"></i>
                        Rozliczenia - {{ flat.name }}
                    </h2>
                </div>
                <div class="mt-4 flex space-x-3 md:mt-0 md:ml-4">
                    <a href="/flats/{{ flat.id }}/history" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                        <i class="fas fa-chart-line mr-2"></i>
                        Historia i wykresy
                    </a>
                    <a href="/flats/{{ flat.id }}/bills/create" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                        <i class="fas fa-plus mr-2"></i>
                        Nowe rozliczenie
                    </a>
                </div>
            </div>
        </div>

        <!-- Bills list -->
        <div class="bg-white shadow overflow-hidden sm:rounded-md fade-in">
            {% if bills is empty %}
                <div class="text-center py-12">
                    <i class="fas fa-file-invoice text-gray-300 text-6xl mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Brak rozliczeń</h3>
                    <p class="text-gray-500 mb-6">Rozpocznij od utworzenia pierwszego rozliczenia</p>
                    <a href="/flats/{{ flat.id }}/bills/create" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-primary-600 bg-primary-100 hover:bg-primary-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                        <i class="fas fa-plus mr-2"></i>
                        Utwórz rozliczenie
                    </a>
                </div>
            {% else %}
                <ul class="divide-y divide-gray-200">
                    {% for bill in bills %}
                        <li class="hover:bg-gray-50 transition-colors duration-200">
                            <div class="px-4 py-4 sm:px-6">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-4">
                                        <div class="flex-shrink-0">
                                            <div class="h-10 w-10 rounded-full {% if bill.status == 'confirmed' %}bg-green-100{% else %}bg-yellow-100{% endif %} flex items-center justify-center">
                                                <i class="fas {% if bill.status == 'confirmed' %}fa-check text-green-600{% else %}fa-clock text-yellow-600{% endif %}"></i>
                                            </div>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center space-x-3">
                                                <p class="text-lg font-medium text-gray-900">
                                                    Rozliczenie {{ bill.period }}
                                                </p>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {% if bill.status == 'confirmed' %}bg-green-100 text-green-800{% else %}bg-yellow-100 text-yellow-800{% endif %}">
                                                    {% if bill.status == 'confirmed' %}
                                                        <i class="fas fa-check mr-1"></i>
                                                        Zatwierdzone
                                                    {% else %}
                                                        <i class="fas fa-clock mr-1"></i>
                                                        Oczekuje
                                                    {% endif %}
                                                </span>
                                            </div>
                                            <div class="mt-2 flex items-center text-sm text-gray-500 space-x-4">
                                                <span>
                                                    <i class="fas fa-calendar mr-1"></i>
                                                    Utworzone: {{ bill.created_at|date('d.m.Y H:i') }}
                                                </span>
                                                {% if bill.status == 'confirmed' and bill.confirmed_at %}
                                                    <span>
                                                        <i class="fas fa-check-circle mr-1"></i>
                                                        Zatwierdzone: {{ bill.confirmed_at|date('d.m.Y H:i') }}
                                                    </span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="flex items-center space-x-4">
                                        <div class="text-right">
                                            <p class="text-lg font-semibold text-gray-900">
                                                {{ bill.total_cost|number_format(2, ',', ' ') }} zł
                                            </p>
                                            <p class="text-sm text-gray-500">
                                                {{ bill.costs|length }} {% if bill.costs|length == 1 %}medium{% else %}mediów{% endif %}
                                            </p>
                                        </div>
                                        <div class="flex space-x-2">
                                            <a href="/flats/{{ flat.id }}/bills/{{ bill.id }}" 
                                               class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                                                <i class="fas fa-eye mr-1"></i>
                                                Zobacz
                                            </a>
                                            {% if bill.status != 'confirmed' %}
                                                <a href="/flats/{{ flat.id }}/bills/{{ bill.id }}/edit" 
                                                   class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                                                    <i class="fas fa-edit mr-1"></i>
                                                    Edytuj
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Utilities summary -->
                                {% if bill.costs is not empty %}
                                    <div class="mt-4">
                                        <div class="flex flex-wrap gap-2">
                                            {% for utilityId, cost in bill.costs %}
                                                {% set utility = flat.utilities[utilityId] %}
                                                {% set fixedCost = bill.fixed_costs[utilityId] ?? 0 %}
                                                {% set totalCost = cost + fixedCost %}
                                                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-800">
                                                    {% if utility.type == 'gas' %}
                                                        <i class="fas fa-fire mr-1 text-orange-500"></i>Gaz
                                                    {% elseif utility.type == 'electricity' %}
                                                        <i class="fas fa-bolt mr-1 text-yellow-500"></i>Prąd
                                                    {% elseif utility.type == 'cold_water' %}
                                                        <i class="fas fa-tint mr-1 text-blue-500"></i>Woda zimna
                                                    {% elseif utility.type == 'hot_water' %}
                                                        <i class="fas fa-tint mr-1 text-red-500"></i>Woda ciepła

                                                    {% else %}
                                                        {{ utility.type|title }}
                                                    {% endif %}
                                                    {% if utility.name %}
                                                        ({{ utility.name }})
                                                    {% endif %}
                                                    : {{ totalCost|number_format(2, ',', ' ') }} zł
                                                </span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
